<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>码可档</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="码可档">
		<meta name="author" content="田仁山">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <style>
        body {
            padding: 0;
            margin: 0;
        }
        #loading {
            height: 100vh;
            width: 100%;
            background-color: #e3e3e3;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #app {
            opacity: 0;
        }

        .m, .k, .d {
            display: inline-block;
            color: #FFF;
            font-size: 24px;
            padding: 0 10px;
            text-shadow: 2px 2px 4px #000000;
        }

        .m {
            animation: loading-animate 6s infinite;
        }

        .k {
            animation: loading-animate 4s;
            animation-delay: 2s;
        }

        .d {
            animation: loading-animate 2s ;
            animation-delay: 4s;
        }

        .fadein {
            animation: fade-in 1s;
        }

        .fadeout {
            animation: fade-out 1s;
        }

        @keyframes loading-animate {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }

        }

        @keyframes fade-in {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

        @keyframes fade-out {
            0% {
                opacity: 1;
            }
            100% {
                opacity: 0;
            }
        }
    </style>
    <script type="text/javascript">
        var _paq = _paq || [];
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function() {
            var u="//p.amaze.so/";
            _paq.push(['setTrackerUrl', u+'piwik.php']);
            _paq.push(['setSiteId', 1]);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
        })();
    </script>
    <noscript><p><img src="//p.amaze.so/piwik.php?idsite=1" style="border:0;" alt="" /></p></noscript>
</head>
<body>
<div id="loading">
    <div class="m">M</div>
    <div class="k">K</div>
    <div class="d">D</div>
</div>
<div id="app"></div>
<script>
    window.onload = function () {
        document.getElementById('loading').classList.add('fadeout');
        setTimeout(function() {
            document.getElementById('loading').remove();
            document.getElementById('app').style.opacity = 1;
            document.getElementById('app').classList.add('fadein');
        }, 1000);
    }
</script>
<script type="text/javascript" src="https://renshan.info/app.js"></script>
</body>
</html>
